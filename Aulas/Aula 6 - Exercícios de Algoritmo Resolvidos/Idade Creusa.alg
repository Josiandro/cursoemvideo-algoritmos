algoritmo "Idade Creusa"
var
   ano_atual, ano_nasci, idade: inteiro
inicio
      Escreva("Em que ano nós estamos? ")
      Leia(ano_atual)
      Escreva("Em que ano eu nasci? ")
      Leia(ano_nasci)
      idade <- ano_atual - ano_nasci
      Escreva("Atualmente estou com", idade, " anos de idade.")
fimalgoritmo
